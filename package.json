{
  "name": "wine-cellar-app",
  "version": "1.0.0",
  "description": "Personal wine cellar management with visual grid and AI pairing",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run --config tests/integration/vitest.config.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "vitest run --coverage",
    "test:pg": "node scripts/test-pg-compat.js",
    "lint": "eslint src/ public/js/",
    "lint:fix": "eslint src/ public/js/ --fix"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@supabase/supabase-js": "^2.90.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "sharp": "^0.34.5",
    "vitest": "^4.0.16"
  }
}
