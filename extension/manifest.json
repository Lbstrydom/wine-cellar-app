{
  "manifest_version": 3,
  "name": "Wine Cellar Assistant",
  "short_name": "Wine Cellar",
  "version": "1.0.0",
  "description": "Add wines to your buying plan directly from any wine retailer.",

  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Wine Cellar Assistant"
  },

  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/extractors.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "settings/settings.html",

  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
